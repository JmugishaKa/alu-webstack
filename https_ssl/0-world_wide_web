#!/usr/bin/env bash
# print domains and subdomains

print_domain_subdomain () {
    dig "$1" | grep -A1 'ANSWER SECTION:' | sed -r "s/$1./$2/g" | awk -F" " ' NR==2 { print "The subdomain " $1 " is a " $4 " record and points to " $5 }'
}

if [ "$#" -eq 2 ]
then
    print_domain_subdomain "$2.$1" "$2"
else
    print_domain_subdomain "www.$1" "www"
    print_domain_subdomain "lb-01.$1" "52.71.6.91"
    print_domain_subdomain "web-01.$1" "3.87.215.189"
    print_domain_subdomain "web-02.$1" "100.26.112.230"
fi
